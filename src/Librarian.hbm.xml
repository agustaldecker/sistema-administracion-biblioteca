<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "Librarian" table = "librarians">

        <meta attribute = "class-description">
            This class contains the librarians detail.
        </meta>

        <id name = "id" type = "int" column = "id">
            <generator class="native"/>
        </id>

        <property name = "name" column = "Name_Surname" type = "string"/>
        <property name = "password" column = "Password" type = "string"/>
        <property name = "email" column = "Email" type = "string"/>
        <property name = "address" column = "Adress" type = "string"/>
        <property name = "city" column = "City" type = "string"/>
        <property name = "contact" column = "Contact" type = "string"/>

    </class>
</hibernate-mapping>